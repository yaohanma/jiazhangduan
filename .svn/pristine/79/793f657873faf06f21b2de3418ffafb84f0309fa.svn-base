function test(){
	ysAjax("/medal/statistics_share", {
		openid:getUrlParam('openid'),
		stu_id:getUrlParam('stu_id'),
		app_id:getUrlParam('app_id'),
		auth_key:getUrlParam('auth_key')
	}, function(data) {
		if(data.success){
			showAlert(getUrlParam('invitate_code')+"**"+
				getUrlParam('openid')+"**"+
				getUrlParam('stu_id')+"**"+
				getUrlParam('app_id')+"**"+getUrlParam('auth_key')
			);
		}else{
			showAlert(data.errorMsg);
		}
	});
}
