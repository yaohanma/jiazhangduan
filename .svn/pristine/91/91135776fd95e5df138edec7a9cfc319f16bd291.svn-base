			// 勋章列表
			function getMedalList() {
				// 域名
				ysAjax("/invitation/get_inviteCode", {}, function(data) {
					if(data.success) {
						var item = data.result;
						domain = item.domain;
					}
				});
				ysAjax("/mob/medal/get_medal_list", {}, function(data) {
					if(data.success) {
						if(data.result != null && data.result.length > 0){
							for(var i=0; i<data.result.length;i++){
								var item = data.result[i];
								$('.mebal_gray'+item.classify_flag).css('display','none');
								$('.mebal_active'+item.classify_flag).css('display','');
							}
						}
						var medals = $("img[class^='mebal_active']");
						$(medals).each(function(){
							$(this).click(function(){
								var classify_flag = $(this).prop('class').substring(12,$(this).prop('class').length);
								if(classify_flag == '1') {
									wx.previewImage({
										current: domain+'/static/images/medal_img/img_wm@2x.png', // 当前显示图片的http链接
										urls: [domain+'/static/images/medal_img/img_wm@2x1.png'] // 需要预览的图片http链接列表
									});
								} else if(classify_flag == '2') {
									wx.previewImage({
										current: domain+'/static/images/medal_img/img_fx@2x.png', // 当前显示图片的http链接
										urls: [domain+'/static/images/medal_img/img_fx@2x1.png'] // 需要预览的图片http链接列表
									});
								} else if(classify_flag == '3') {
									wx.previewImage({
										current: domain+'/static/images/medal_img/img_jj@2x.png', // 当前显示图片的http链接
										urls: [domain+'/static/images/medal_img/img_jj@2x1.png'] // 需要预览的图片http链接列表
									});
									$('#medal_detail_img').prop('src','/static/images/medal_img/img_jj@2x1.png');
								} else if(classify_flag == '4_1') {
									wx.previewImage({
										current: domain+'/static/images/medal_img/img_rz@2x.png', // 当前显示图片的http链接
										urls: [domain+'/static/images/medal_img/img_rz@2x1.png'] // 需要预览的图片http链接列表
									});
								} else if(classify_flag == '4_2') {
									wx.previewImage({
										current: domain+'/static/images/medal_img/img_jd@2x.png', // 当前显示图片的http链接
										urls: [domain+'/static/images/medal_img/img_jd@2x1.png'] // 需要预览的图片http链接列表
									});
								}else if(classify_flag == '4_3') {
									wx.previewImage({
										current: domain+'/static/images/medal_img/img_zz@2x.png', // 当前显示图片的http链接
										urls: [domain+'/static/images/medal_img/img_zz@2x1.png'] // 需要预览的图片http链接列表
									});
								}else if(classify_flag == '5') {
									wx.previewImage({
										current: domain+'/static/images/medal_img/img_lz@2x.png', // 当前显示图片的http链接
										urls: [domain+'/static/images/medal_img/img_lz@2x1.png'] // 需要预览的图片http链接列表
									});
								} else if(classify_flag == '6') {
									wx.previewImage({
										current: domain+'/static/images/medal_img/img_wr@2x.png', // 当前显示图片的http链接
										urls: [domain+'/static/images/medal_img/img_wr@2x1.png'] // 需要预览的图片http链接列表
									});
								} else if(classify_flag == '7') {
									wx.previewImage({
										current: domain+'/static/images/medal_img/img_ga@2x.png', // 当前显示图片的http链接
										urls: [domain+'/static/images/medal_img/img_ga@2x1.png'] // 需要预览的图片http链接列表
									});
								} else if(classify_flag == '8') {
									wx.previewImage({
										current: domain+'/static/images/medal_img/img_xw@2x.png', // 当前显示图片的http链接
										urls: [domain+'/static/images/medal_img/img_xw@2x1.png'] // 需要预览的图片http链接列表
									});
								} else if(classify_flag == '9') {
									wx.previewImage({
										current: domain+'/static/images/medal_img/img_hg@2x.png', // 当前显示图片的http链接
