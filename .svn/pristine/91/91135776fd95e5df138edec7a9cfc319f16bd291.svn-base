								}
//								window.location.href = '/html/medal/medal_nel.html?classify_flag='+classify_flag+'&scrollheight='+scrollheight;
							});
						});
					}
				}, function(err) {
					showAlert('服务器异常，请稍后重试');
				});
			}
			
			// 使用js-sdk配置信息
			function init() {
				// WX
				ysAjax("/wechatController/get_signature", {
					url: location.href
				}, function(data) {
					if(data.success) {
						var item = data.result;
						if(wx) {
							wx.config({
								debug: false,
								appId: item.appid, // 必填，公众号的唯一标识
								timestamp: item.timestamp, // 必填，生成签名的时间戳
								nonceStr: item.nonceStr, // 必填，生成签名的随机串
								signature: item.signature, // 必填，签名
								jsApiList: [ // 必填，需要使用的JS接口列表
									'previewImage',
								]
							});
							wx.error(function(res) {
								showAlert(res.errMsg);
							});
						}
					}
				});
			}
