					hasIcon:true,
					action : function() {
						$("#ysYduiNavBarRightBtn").attr("href","/html/read/child_read_history.html"); 
					}
	});
	addMainPageFooter(2);
	childReadInfo();
}); // ready
// 阅读信息
function childReadInfo() {
	ysAjax("/read/child_read_init",{},function(data) {
		if(data.success) {
			var item = data.result;
			// 阅读时长
			$('.mess').html('累计阅读时长'+item.read_time+'，超越了同班' + item.over_percent.substring(0,item.over_percent.lastIndexOf('.')) + '%的同学');
			// 书架
			var shell_html = '';
			if(item.book_shell_list != null && item.book_shell_list.length > 0){
				$('#shell_count').html('共'+item.book_shell_list.length+'本');
				for(var i=0; i<item.book_shell_list.length; i++){
					var book = item.book_shell_list[i];
					if(book.read_flag == '1'){ // 必读
						shell_html = shell_html + '	<div class="swiper-slide bidu">  ';
					}else{
						shell_html = shell_html + '	<div class="swiper-slide">  ';
					}
					shell_html = shell_html + '		<a href="#">  ';

					if(book.read_flag == '1'){// 必读
						shell_html = shell_html + '			<span>必读</span>  ';
					}
					if(book.thumb_pic != null && book.thumb_pic != ''){
						shell_html = shell_html + '			<img src="'+book.thumb_pic+'" />  ';
					}else{
						shell_html = shell_html + '			<img src="/static/images/homework/test.png" />  ';	
					}

					shell_html = shell_html + '			<div style="width: 100%;">'+book.resource_name+'</div>  ';
					shell_html = shell_html + '		</a>  ';
					shell_html = shell_html + '	</div>  ';
				}
				/*shell_html = shell_html + ' <div class="swiper-slide" style="width:0.03rem;"> ';
				shell_html = shell_html + ' 	<a> ';
				shell_html = shell_html + ' 		 ';
				shell_html = shell_html + ' 		<div style="width: 100%;">&nbsp;</div> ';
				shell_html = shell_html + ' 	</a> ';
				shell_html = shell_html + ' </div> ';*/
				$('.swiper-wrapper').html(shell_html);
				//滑动模块
			    var swiper = new Swiper('.swiper-container', {
			      slidesPerView: 'auto',
			      spaceBetween: 30,
			      pagination: {
			        el: '.swiper-pagination',
			        clickable: true,
			      },
			    });
			}else{// 无数据
				$('#shell_count').html('共0本');
				shell_html = shell_html+ '	<div class="bg">  ';
				shell_html = shell_html+ '		<div></div>  ';
				shell_html = shell_html+ '		<p style="">暂无数据</p>  ';
				shell_html = shell_html+ '	</div>  ';
				$('.swiper-wrapper').html(shell_html);
			}
			// 读书笔记 
			var note_html = '';
			if(item.book_notes != null && item.book_notes.length > 0){
				var note_count = 0;
				for(var j=0; j<item.book_notes.length; j++){
					var note = item.book_notes[j];
					note_html = note_html + '	<a href="/html/read/child_read_notes.html?resource_id='+note.resource_id+'" class="cell-item">  ';
					note_html = note_html + '		<div class="cell">			  ';
					note_html = note_html + '			<div>'+note.resource_name+'</div>  ';
					note_html = note_html + '			<p>  ';
					note_html = note_html + '				<span  class="pull-left">最新添加日期：'+note.update_time+'</span>  ';
					note_html = note_html + '				<span  class="pull-right">笔记总数：'+note.op_count+'</span>  ';
					note_html = note_html + '			</p>  ';
					note_html = note_html + '		</div>  ';
					note_html = note_html + '	</a>  ';
					note_count = note_count + parseInt(note.op_count);
				}
//				$('#note_count').html('笔记总数：'+note_count);
				$('.book_box').html(note_html);
			}else{// 无数据
//				$('#note_count').html('笔记总数：0');
				note_html = note_html+ '	<div class="bg">  ';
				note_html = note_html+ '		<div></div>  ';
				note_html = note_html+ '		<p style="">暂无数据</p>  ';
				note_html = note_html+ '	</div>  ';
				$('.book_box').html(note_html);
			}
		} else {
			showAlert('服务器异常，请稍后重试');
		}
	}, function(err) {
		showAlert('服务器异常，请稍后重试');
	});
}


